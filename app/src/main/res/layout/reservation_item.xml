<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reservation_border">

    <TextView
        android:id="@+id/name_label"
        style="@style/reservation_item_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="@string/name_lbl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_text"
        style="@style/reservation_item_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Temp Text"
        app:layout_constraintBaseline_toBaselineOf="@+id/name_label"
        app:layout_constraintStart_toEndOf="@+id/name_label" />

    <TextView
        android:id="@+id/conf_num_label"
        style="@style/reservation_item_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="@string/confirmation_number_lbl"
        app:layout_constraintStart_toEndOf="@+id/name_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/conf_num_text"
        style="@style/reservation_item_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Temp Text"
        app:layout_constraintBaseline_toBaselineOf="@+id/conf_num_label"
        app:layout_constraintStart_toEndOf="@+id/conf_num_label" />

    <TextView
        android:id="@+id/tour_lbl"
        style="@style/reservation_item_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="@string/tour_lbl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conf_num_label" />

    <TextView
        android:id="@+id/tour_txt"
        style="@style/reservation_item_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Temp Text"
        app:layout_constraintBaseline_toBaselineOf="@+id/tour_lbl"
        app:layout_constraintStart_toEndOf="@+id/tour_lbl" />

    <TextView
        android:id="@+id/pax_label"
        style="@style/reservation_item_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/pax_lbl"
        app:layout_constraintBaseline_toBaselineOf="@+id/tour_lbl"
        app:layout_constraintStart_toEndOf="@+id/tour_txt" />

    <TextView
        android:id="@+id/pax_text"
        style="@style/reservation_item_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Temp Text"
        app:layout_constraintBaseline_toBaselineOf="@+id/pax_label"
        app:layout_constraintStart_toEndOf="@+id/pax_label" />
</androidx.constraintlayout.widget.ConstraintLayout>